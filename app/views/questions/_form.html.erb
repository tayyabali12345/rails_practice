<%= form_with(model: question, local: true) do |f| %>

  <div class="field">
    <%= f.label :Subject %><br />
    <%= f.text_field :subject %>
  </div>

  <div class="field">
    <%= f.label :Desription %><br />
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :Select_Topics %><br />

      <% Topic.all().each do |item|%>
        <%=item.title%>
        <input type="checkbox" name="tag_ids[]" value=<%=item.id%> />

      <%end%>

  </div>

<%#
 <%= f.select :topics_id[], options_for_select(Topic.all.collect {|p| [ p.title, p.id ] }), {:include_blank => true, :multiple => true, :size =>10}  %>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
