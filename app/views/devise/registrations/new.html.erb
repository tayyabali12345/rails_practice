<h2 class="text-center">Sign up</h2>

<div class="container-fluid">
  <div class="row justify-content-center">



<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

 <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, required: true %>
  </div>

<div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, required: true %>
  </div>


  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, required: true %>
  </div>

  <div class="field">
    <%= f.label :gender %><br />
    <%= f.radio_button :gender, 'M' %> Male<br /> <%= f.radio_button :gender, 'F' %> Female<br />
  </div>

    <div class="field">
    <%= f.label :age %><br />
    <%= f.number_field :age, required: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
  </div>

  <div class="field">
      <%= f.label :image %><br />
      <%= f.file_field :image, accept: '.gif, .png, .jpg, .jpeg' %>
      <div id="output"></div>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", required: true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
  </div>

  <div class="actions">
    <%= f.submit id:"button" , :class=>"btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
