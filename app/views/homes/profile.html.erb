

<%= link_to "BACK", root_path, :class=>'btn btn-success' %>

<h2 >User's Profile!</h2>

<table>
  <thead>
    <tr>
      <th colspan="3"><%="User Profile!"%></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th><%='NAME'%></th>
      <th><%='EMAIL'%></th>
      <th><%='GENDER'%></th>
    </tr>
    <tr>
    <td>"M." <%=@user.last_name%></td>
    <td><%=@user.email%></td>
    <td><%=@user.gender%></td>
    </tr>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th colspan="4"><%="Question Posted!"%></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th><%='SUBJECT'%></th>
      <th><%='DESCRIPTION'%></th>
      <th><%='LIKES'%></th>
      <th><%='DISLIKES'%></th>
    </tr>

    <%@questions.each do |question|%>
      <tr>
        <td><%=question.subject%></td>
        <td><%=question.description%></td>
        <td><%=question.likes%></td>
        <td><%=question.dislikes%></td>
      </tr>
    <%end%>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th colspan="5"><%="Answer Posted!"%></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th><%='QUESTION SUBJECT'%></th>
      <th><%='DESCRIPTION'%></th>
      <th><%='ANSWER'%></th>
      <th><%='LIKES'%></th>
      <th><%='DISLIKES'%></th>
    </tr>

    <%@answers.each do |answer|%>
      <tr>
        <td><%=answer.question.subject%></td>
        <td><%=answer.question.description%></td>
        <td><%=answer.description%></td>
        <td><%=answer.likes%></td>
        <td><%=answer.dislikes%></td>
      </tr>
    <%end%>
  </tbody>
</table>
